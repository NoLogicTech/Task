<style>
    #taskView {
        width: 90%;
        align-items: center;
        justify-content: center;
        border-bottom: 2px solid #C2C2C2;
        padding: 0px 4px 0px 4px;
    }

    #conteudo {
        width: 100%;
        padding: 5px;
    }

    h2 {
        margin-top: 1px;
        margin-left: 2px;
        margin-right: 2px;
        font-size: 14pt;
    }

    #editar {
        background-color: #0C6291;
        color: #FBFEF9;
        margin-right: 4px;
        margin-top: 5px;
    }

    #finalizar {
        background-color: #297045;
        color: #FBFEF9;
        margin-left: 4px;
        margin-top: 5px;
    }

    #conteudo ul li {
        display: inline-block;
        margin: 4px;
    }

    #rowTarefa {
        /*box-shadow: 2px 2px 4px ;*/
        padding: 5px 2px 5px 2px;
    }
    /*-----------------------------------------------------------------------------*/

    .optionIcon {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center
    }

    .inputValor {
        width: 50%%;
        padding: 4px 0px 4px 8px;
        margin: 2px 0;
        box-sizing: border-box;
        border: none;
        border-radius: 4px;
    }
</style>

        <EditForm Model=@tarefa>
            <div class="container" id="taskView" @onclick="Selecionar">
                <div class="row" id="rowTarefa">
                    <div id="" class="col-1 optionIcon">
                        @if (selecionado)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z" />
                                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z" />
                            </svg>
                        }

                        @if (!selecionado)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            </svg>
                        }

                    </div>


                    <div class="col-10">
                        <div id="conteudo">
                            <div class=" container row">
                                <div class="col-auto">
                                    <label for="TarefaPosicao">Tarefa</label>
                                    <InputNumber id="TarefaPosicao" class="inputValor" @bind-Value=tarefa.TarefaPosicao />
                                </div>
                                <div class="col-auto">
                                    <p>-</p>
                                </div>
                                <div class="col-auto">
                                    <InputText id="TarefaNome" class="inputValor" @bind-Value=tarefa.TarefaNome />
                                </div>
                                <div class="col-auto"></div>
                            </div>


                            <ul id="info">
                                <li>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-week" viewBox="0 0 16 16">
                                        <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                                    </svg>
                                    <label for="TarefaDataLimite">Data para coclusao</label>
                                    <InputDate id="TarefaDataLimite" class="inputValor" @bind-Value=tarefa.TarefaDatalimite />
                                </li>
                                <li>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                    </svg>
                                    Categoria Vermelha
                                </li>

                                <li>
                                    <p>Atribuido a: @tarefa.UtilizadorIdatribuido</p>
                                </li>

                                <li>
                                    <p>Criado por: @tarefa.UtilizadorIdcriador</p>
                                </li>
                            </ul>

                        </div>

                    </div>
                    <div class="col-1 optionIcon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                        </svg>

                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16" color="red">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                        </svg>
                    </div>
                </div>

            </div>

            <input type="submit" />
            
        </EditForm>



@code{
    [Parameter]
    public Tarefa tarefa { get; set; }

    public bool selecionado = false;
    private void Editar()
    {
    }

    private void Finalizar()
    {
    }

    private void Selecionar(MouseEventArgs mouseEventArgs)
    {
        if (!selecionado)
        {
            selecionado = true;
        }
        else
        {
            selecionado = false;
        }
    }

}

